{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "title": "CO2 emissions 2018 (metric tonnes per capita)",
  "width": 1000,
  "height": 600,
  "data": {
    "url": "https://kelvinvalani.github.io/FIT3179/vis2/js/ne_110m.json",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },
  "transform": [
    {
      "lookup": "properties.NAME",
      "from": {
        "data": {
          "url": "https://kelvinvalani.github.io/FIT3179/vis2/data/map.csv"
        },
        "key": "Country Name",
        "fields": ["Emission"]
      }
    }
  ],
  "projection": {"type": "equirectangular"},
  "mark": {"type": "geoshape"},
  "encoding": {
    "color": {
      "field": "Emission",
      "title": "CO2 emissions",
      "type": "quantitative",
      "scale": {"type": "log","range": ["#0000","#de2d26"]}
    },
    "tooltip": [
      {"field": "properties.NAME", "type": "nominal", "title": "Country Name"},
      {"field": "Emission", "type": "quantitative"}
    ]
  }
}

